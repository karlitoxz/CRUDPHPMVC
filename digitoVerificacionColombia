<?php 

function calcularDV($nit) {

	$nit = intval(filter_var($nit, FILTER_SANITIZE_NUMBER_INT));

    if (! is_numeric($nit)) {
        return false;
    }

    $largo = strlen($nit)-1;
    $posicion = $largo;
 
    $array = array(3,7,13,17,19,23,29,37,41,43,47,53,59,67,71);
 	$nC = 0;


	for ($i=0; $i<=$largo; $i++) {
		$nC += substr($nit, $posicion , 1)*$array[$i];
		$posicion--;
    }

    $nC = $nC%11;

    $nC = 11 - $nC;

    return $nC;
    
}
//Se debe ingresar el NIT sin comas puntos etc...
echo 'El digito de verificaciÃ³n es: ' . calcularDV(44223352);


 ?>
